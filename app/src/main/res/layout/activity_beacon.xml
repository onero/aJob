<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BeaconActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/beaconView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/perhaps_beacon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="findBeacon"
        android:text="@string/find_beacon"
        android:id="@+id/beaconButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="#51b46d"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_beacon"
        android:id="@+id/beaconInfoButton"
        android:layout_below="@+id/beaconView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#51b46d"
        android:textColor="#fff" />
</RelativeLayout>
